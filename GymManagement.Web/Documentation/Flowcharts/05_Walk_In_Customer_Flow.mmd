%% QUY TRÌNH KHÁCH VÃNG LAI
%% Tối ưu cho Draw.io import

flowchart TD
    A[Khách vãng lai đến] --> B[Đăng ký nhanh]
    B --> C[Chọn gói vé ngày]
    C --> D{Phương thức thanh toán?}
    D -->|Tiền mặt| E[Thanh toán tại quầy]
    D -->|Chuyển khoản| F[Quét mã QR]
    E --> G[Kích hoạt vé]
    F --> H{Thanh toán thành công?}
    H -->|Không| I[Hủy giao dịch]
    H -->|Có| G
    G --> J[Cấp thẻ tạm]
    J --> K[Check-in]
    K --> L[Bắt đầu tập]

    %% Styling
    classDef startNode fill:#e3f2fd,stroke:#1976d2,stroke-width:2px
    classDef successNode fill:#e8f5e8,stroke:#388e3c,stroke-width:2px
    classDef errorNode fill:#ffebee,stroke:#d32f2f,stroke-width:2px
    classDef decisionNode fill:#e1f5fe,stroke:#0288d1,stroke-width:2px

    class A startNode
    class L successNode
    class I errorNode
    class D,H decisionNode
