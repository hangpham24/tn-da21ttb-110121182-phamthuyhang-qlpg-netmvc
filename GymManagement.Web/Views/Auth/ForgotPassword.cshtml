@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_MemberLayout";
}

<div class="w-full bg-white rounded-xl shadow-lg border border-gray-100">
    <div class="p-8 space-y-6">
        <div class="text-center">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 mb-4">
                <i class="fas fa-key text-blue-600 text-xl"></i>
            </div>
            <h1 class="text-2xl font-bold leading-tight tracking-tight text-gray-900 md:text-3xl">
                Quên mật khẩu?
            </h1>
            <p class="mt-2 text-sm text-gray-600">
                Nhập email của bạn và chúng tôi sẽ gửi link đặt lại mật khẩu
            </p>
        </div>

        <form class="space-y-6" action="#" method="post">
            <div>
                <label for="email" class="block mb-2 text-sm font-medium text-gray-900">Email</label>
                <input type="email" name="email" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-3 transition-colors" placeholder="name@company.com" required>
            </div>

            <button type="submit" class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-6 py-3 text-center transition-colors">
                <strong>Gửi link đặt lại mật khẩu</strong>
            </button>
            
            <div class="text-center">
                <a asp-action="Login" class="text-sm font-medium text-blue-600 hover:underline ">
                    <i class="fas fa-arrow-left mr-1"></i>
                    Quay lại đăng nhập
                </a>
            </div>
        </form>
    </div>
</div>
