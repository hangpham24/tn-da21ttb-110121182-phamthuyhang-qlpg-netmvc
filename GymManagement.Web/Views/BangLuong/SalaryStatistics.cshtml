                    const result = await response.json();
                    if (result.success) {
                        location.reload();
                    } else {
                        alert(result.message);
                    }
                } catch (error) {
                    alert('C√≥ l·ªói x·∫£y ra khi thanh to√°n l∆∞∆°ng');
                }
            }
        }

        function exportStatistics() {
