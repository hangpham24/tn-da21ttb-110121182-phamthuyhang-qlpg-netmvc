                calendar.changeView(this.value);
                updateNavigationControls(this.value);
            });

            document.getElementById('todayBtn').addEventListener('click', function() {
                calendar.today();
            });

            // Week navigation event listeners
            document.getElementById('prevWeek').addEventListener('click', function() {
                console.log('Previous week clicked');
                calendar.prev();
                showNavigationFeedback('ƒê√£ chuy·ªÉn ƒë·∫øn tu·∫ßn tr∆∞·ªõc');
            });

            document.getElementById('currentWeek').addEventListener('click', function() {
                console.log('Current week clicked');
                calendar.today();
                showNavigationFeedback('ƒê√£ chuy·ªÉn ƒë·∫øn tu·∫ßn hi·ªán t·∫°i');
            });

            document.getElementById('nextWeek').addEventListener('click', function() {
                console.log('Next week clicked');
                calendar.next();
                showNavigationFeedback('ƒê√£ chuy·ªÉn ƒë·∫øn tu·∫ßn ti·∫øp theo');
            });
        });

        function initializeCalendar() {
            const calendarEl = document.getElementById('calendar');
            
            calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'timeGridWeek',
                locale: 'vi',
                headerToolbar: {
                    left: '',
                    center: '',
                    right: ''
                },
                height: 'auto',
                events: function(info, successCallback, failureCallback) {
                    console.log('Loading calendar events for:', info.start, 'to', info.end);
                    loadCalendarEvents(info.start, info.end, successCallback, failureCallback);
                },
                eventClick: function(info) {
