@model GymManagement.Web.Models.DTOs.TinTucPublicDto
@{
    ViewData["Title"] = Model.TieuDe;
    
    // Set layout based on user role
    if (User.Identity?.IsAuthenticated == true)
    {
        if (User.IsInRole("Admin"))
        {
            Layout = "_Layout";
        }
        else if (User.IsInRole("Trainer"))
        {
            Layout = "_TrainerLayout";
        }
        else
        {
            Layout = "_MemberLayout";
        }
    }
    else
    {
        Layout = "_MemberLayout"; // Default for anonymous users
    }
}

<!-- Article Header -->
<div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Breadcrumb -->
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="@Url.Action("Index", "Home")" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L9 5.414V17a1 1 0 102 0V5.414l5.293 5.293a1 1 0 001.414-1.414l-7-7z"></path>
                        </svg>
                        Trang chủ
                    </a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <a href="@Url.Action("TinTuc", "Home")" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2">Tin tức</a>
                    </div>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">@Model.TieuDe</span>
                    </div>
                </li>
            </ol>
        </nav>

        <!-- Article Meta -->
        <div class="mb-6">
            @if (Model.NoiBat)
            {
                <div class="mb-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                        ⭐ Tin tức nổi bật
                    </span>
                </div>
            }
            
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 leading-tight">@Model.TieuDe</h1>
            
            <div class="flex flex-wrap items-center text-sm text-gray-600 space-x-6">
                @if (Model.NgayXuatBan.HasValue)
                {
                    <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span>@Model.NgayXuatBan.Value.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                }
                
                <div class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    <span>@Model.LuotXem lượt xem</span>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.TenTacGia))
                {
                    <div class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span>@Model.TenTacGia</span>
                    </div>
                }
            </div>
        </div>

        <!-- Featured Image -->
        @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
        {
            <div class="mb-8">
                <img src="@Model.AnhDaiDien" alt="@Model.TieuDe" class="w-full h-64 md:h-96 object-cover rounded-lg shadow-lg" />
            </div>
        }

        <!-- Short Description -->
        @if (!string.IsNullOrEmpty(Model.MoTaNgan))
        {
            <div class="mb-8 p-6 bg-blue-50 border-l-4 border-blue-500 rounded-r-lg">
                <p class="text-lg text-gray-700 font-medium italic">@Model.MoTaNgan</p>
            </div>
        }
    </div>
</div>

<!-- Article Content -->
<div class="bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="bg-white rounded-lg shadow-sm p-8">
            <div class="prose prose-lg max-w-none">
                @Html.Raw(Model.NoiDung)
            </div>
        </div>
    </div>
</div>

<!-- Related Articles -->
@if (ViewBag.RelatedTinTucs != null && ((IEnumerable<GymManagement.Web.Models.DTOs.TinTucPublicDto>)ViewBag.RelatedTinTucs).Any())
{
    <div class="bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <h3 class="text-2xl font-bold text-gray-900 mb-8">Tin tức liên quan</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                @foreach (var relatedNews in (IEnumerable<GymManagement.Web.Models.DTOs.TinTucPublicDto>)ViewBag.RelatedTinTucs)
                {
                    <article class="bg-gray-50 rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300">
                        @if (!string.IsNullOrEmpty(relatedNews.AnhDaiDien))
                        {
                            <div class="aspect-w-16 aspect-h-9 overflow-hidden">
                                <img src="@relatedNews.AnhDaiDien" alt="@relatedNews.TieuDe" class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300" />
                            </div>
                        }
                        else
                        {
                            <div class="w-full h-48 bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
                                <svg class="w-12 h-12 text-white opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                                </svg>
                            </div>
                        }
                        
                        <div class="p-6">
                            @if (relatedNews.NoiBat)
                            {
                                <div class="mb-3">
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                        ⭐ Nổi bật
                                    </span>
                                </div>
                            }
                            
                            <h4 class="font-bold text-lg text-gray-900 mb-3 line-clamp-2 hover:text-blue-600 transition-colors duration-200">
                                <a href="@Url.Action("ChiTietTinTuc", "Home", new { slug = relatedNews.Slug })">@relatedNews.TieuDe</a>
                            </h4>
                            
                            <p class="text-gray-600 mb-4 line-clamp-2">@relatedNews.MoTaNgan</p>
                            
                            <div class="flex items-center justify-between text-sm text-gray-500">
                                @if (relatedNews.NgayXuatBan.HasValue)
                                {
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                        <span>@relatedNews.NgayXuatBan.Value.ToString("dd/MM/yyyy")</span>
                                    </div>
                                }
                                
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                    <span>@relatedNews.LuotXem</span>
                                </div>
                            </div>
                            
                            <div class="mt-4">
                                <a href="@Url.Action("ChiTietTinTuc", "Home", new { slug = relatedNews.Slug })" 
                                   class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
                                    Đọc thêm
                                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </article>
                }
            </div>
        </div>
    </div>
}
@if (User.IsInRole("Admin"))
{
<!-- Back to News List -->
<div class="bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center">
            <a href="@Url.Action("TinTuc", "Home")" 
               class="inline-flex items-center px-6 py-3 border border-blue-600 text-blue-600 font-semibold rounded-lg hover:bg-blue-600 hover:text-white transition-all duration-300">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                <span>Quay lại danh sách tin tức</span>
            </a>
        </div>
    </div>
</div>
}

@section Styles {
    <style>
        .prose {
            max-width: none;
        }
        
        .prose img {
            border-radius: 0.5rem;
            box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            margin: 2rem auto;
        }
        
        .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
            color: #1f2937;
            font-weight: 700;
            margin-top: 2rem;
            margin-bottom: 1rem;
        }
        
        .prose p {
            margin-bottom: 1.25rem;
            line-height: 1.75;
            color: #374151;
        }
        
        .prose blockquote {
            border-left: 4px solid #3b82f6;
            background-color: #eff6ff;
            padding: 1rem 1.5rem;
            margin: 1.5rem 0;
            border-radius: 0 0.5rem 0.5rem 0;
        }
        
        .prose ul, .prose ol {
            margin: 1.25rem 0;
            padding-left: 1.5rem;
        }
        
        .prose li {
            margin: 0.5rem 0;
        }
        
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
}

@section Scripts {
    <script>
        // Auto-scroll to top when page loads
        document.addEventListener('DOMContentLoaded', function() {
            window.scrollTo(0, 0);
        });
        
        // Share functionality (if needed)
        function shareArticle() {
            if (navigator.share) {
                navigator.share({
                    title: '@Model.TieuDe',
                    text: '@Model.MoTaNgan',
                    url: window.location.href
                });
            } else {
                // Fallback: copy to clipboard
                navigator.clipboard.writeText(window.location.href).then(function() {
                    alert('Đã sao chép liên kết bài viết!');
                });
            }
        }
    </script>
}
