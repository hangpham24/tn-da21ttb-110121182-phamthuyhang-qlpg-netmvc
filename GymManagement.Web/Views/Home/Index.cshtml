@section Scripts {
    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Packages Swiper
            const packagesSwiper = new Swiper('.packagesSwiper', {
                // Basic settings
                slidesPerView: 1,
                spaceBetween: 20,
                loop: true,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false,
                    pauseOnMouseEnter: true
                },

                // Navigation
                navigation: {
                    nextEl: '.packagesSwiper .swiper-button-next',
                    prevEl: '.packagesSwiper .swiper-button-prev',
                },

                // Pagination
                pagination: {
                    el: '.packagesSwiper .swiper-pagination',
                    clickable: true,
                    dynamicBullets: true,
                },

                // Responsive breakpoints
                breakpoints: {
                    // Mobile
                    320: {
                        slidesPerView: 1,
                        spaceBetween: 15
                    },
                    // Tablet
                    768: {
                        slidesPerView: 2,
                        spaceBetween: 20
                    },
                    // Desktop
                    1024: {
                        slidesPerView: 3,
                        spaceBetween: 30
                    },
                    // Large Desktop
                    1280: {
                        slidesPerView: 3,
                        spaceBetween: 40
                    }
                },

                // Effects
                effect: 'slide',
                speed: 600,

                // Accessibility
                a11y: {
                    prevSlideMessage: 'G√≥i t·∫≠p tr∆∞·ªõc',
                    nextSlideMessage: 'G√≥i t·∫≠p ti·∫øp theo',
                    paginationBulletMessage: 'ƒêi ƒë·∫øn g√≥i t·∫≠p {{index}}'
                },

                // Events
                on: {
                    init: function() {
                        console.log('Packages Swiper initialized');
                    },
                    slideChange: function() {
                        // Add any slide change effects here
                        const activeSlide = this.slides[this.activeIndex];
                        if (activeSlide) {
                            activeSlide.querySelector('.bg-white').classList.add('animate-pulse');
                            setTimeout(() => {
                                activeSlide.querySelector('.bg-white').classList.remove('animate-pulse');
                            }, 300);
                        }
                    }
                }
            });

            // Add keyboard navigation
            document.addEventListener('keydown', function(e) {
                if (e.key === 'ArrowLeft') {
                    packagesSwiper.slidePrev();
                } else if (e.key === 'ArrowRight') {
                    packagesSwiper.slideNext();
                }
            });

            // Add touch gestures for mobile
            let startX = 0;
            let endX = 0;

            document.querySelector('.packagesSwiper').addEventListener('touchstart', function(e) {
                startX = e.changedTouches[0].screenX;
            });

            document.querySelector('.packagesSwiper').addEventListener('touchend', function(e) {
                endX = e.changedTouches[0].screenX;
                handleSwipe();
            });

            function handleSwipe() {
                const threshold = 50;
                if (endX < startX - threshold) {
                    packagesSwiper.slideNext();
                }
                if (endX > startX + threshold) {
                    packagesSwiper.slidePrev();
                }
            }

            // Auto-pause on hover
            const swiperContainer = document.querySelector('.packagesSwiper');
            swiperContainer.addEventListener('mouseenter', function() {
                packagesSwiper.autoplay.stop();
            });

            swiperContainer.addEventListener('mouseleave', function() {
                packagesSwiper.autoplay.start();
            });
        });
    </script>
