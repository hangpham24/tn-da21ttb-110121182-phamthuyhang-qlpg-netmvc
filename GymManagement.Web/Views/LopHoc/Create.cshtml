@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get form elements
            const form = document.getElementById('createClassForm');
            const startTimeInput = document.getElementById('GioBatDau');
            const endTimeInput = document.getElementById('GioKetThuc');
            const durationInput = document.getElementById('ThoiLuong');
            const descriptionTextarea = document.getElementById('MoTa');
            const dayCheckboxes = document.querySelectorAll('input[name="selectedDays"]');
            const hiddenInput = document.getElementById('thuTrongTuanHidden');
            const charCount = document.getElementById('charCount');

            // Initialize empty form - no default values

            // Character counter for description
            if (descriptionTextarea && charCount) {
                // Initialize counter
                const initialLength = descriptionTextarea.value.length;
                charCount.textContent = `${initialLength}/500`;
                
                descriptionTextarea.addEventListener('input', function() {
                    const length = this.value.length;
                    charCount.textContent = `${length}/500`;
                    if (length > 450) {
                        charCount.classList.add('text-red-500');
                        charCount.classList.remove('text-gray-400');
                    } else {
                        charCount.classList.remove('text-red-500');
                        charCount.classList.add('text-gray-400');
                    }
                });
            }

            // Duration calculation
            function calculateDuration() {
                if (startTimeInput.value && endTimeInput.value) {
                    const start = new Date(`2000-01-01T${startTimeInput.value}`);
                    const end = new Date(`2000-01-01T${endTimeInput.value}`);
                    const diffMs = end - start;
                    const diffMins = Math.round(diffMs / 60000);

                    const durationDisplay = document.getElementById('durationDisplay');
                    if (diffMins > 0) {
                        const hours = Math.floor(diffMins / 60);
                        const mins = diffMins % 60;
                        let durationText = 'Th·ªùi l∆∞·ª£ng: ';
                        if (hours > 0) {
                            durationText += `${hours} gi·ªù`;
                            if (mins > 0) durationText += ` ${mins} ph√∫t`;
                        } else {
                            durationText += `${mins} ph√∫t`;
                        }
                        durationDisplay.textContent = durationText;
                        durationDisplay.classList.remove('text-red-500');
                        
                        // Auto-fill duration if empty
                        if (!durationInput.value) {
                            durationInput.value = diffMins;
                        }
                    } else {
                        durationDisplay.textContent = 'Gi·ªù k·∫øt th√∫c ph·∫£i sau gi·ªù b·∫Øt ƒë·∫ßu';
                        durationDisplay.classList.add('text-red-500');
                    }
                }
            }

            // Handle days selection
            dayCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    updateDaysString();
                    // Update visual state
                    const label = this.closest('label');
                    if (this.checked) {
                        label.classList.add('bg-blue-50', 'border-blue-500');
                    } else {
                        label.classList.remove('bg-blue-50', 'border-blue-500');
                    }
                });
            });

            function updateDaysString() {
                const selectedDays = Array.from(dayCheckboxes)
                    .filter(cb => cb.checked)
                    .map(cb => cb.value);
                hiddenInput.value = selectedDays.join(', ');
                
                // Update visual state for all checkboxes
                dayCheckboxes.forEach(cb => {
                    const label = cb.closest('label');
                    if (cb.checked) {
                        label.classList.add('bg-blue-50', 'border-blue-500');
                    } else {
                        label.classList.remove('bg-blue-50', 'border-blue-500');
                    }
                });
            }

            // Add event listeners
            startTimeInput?.addEventListener('change', calculateDuration);
            endTimeInput?.addEventListener('change', calculateDuration);

            // Initialize duration calculation
            calculateDuration();

            // Form validation
            form?.addEventListener('submit', function(e) {
                let isValid = true;
                const errors = [];

                // Clear previous errors
                document.querySelectorAll('.field-error').forEach(el => el.remove());

                // Validate class name
                const nameInput = document.getElementById('TenLop');
                if (!nameInput.value.trim()) {
                    errors.push('T√™n l·ªõp h·ªçc kh√¥ng ƒë∆∞·ª£c ƒë·ªÉ tr·ªëng');
                    showFieldError(nameInput, 'Vui l√≤ng nh·∫≠p t√™n l·ªõp h·ªçc');
                    isValid = false;
                }

                // Validate time
                if (!startTimeInput.value || !endTimeInput.value) {
                    errors.push('Vui l√≤ng ch·ªçn gi·ªù b·∫Øt ƒë·∫ßu v√† k·∫øt th√∫c');
                    isValid = false;
                } else {
                    const start = new Date(`2000-01-01T${startTimeInput.value}`);
                    const end = new Date(`2000-01-01T${endTimeInput.value}`);
                    if (end <= start) {
                        errors.push('Gi·ªù k·∫øt th√∫c ph·∫£i sau gi·ªù b·∫Øt ƒë·∫ßu');
                        showFieldError(endTimeInput, 'Gi·ªù k·∫øt th√∫c ph·∫£i sau gi·ªù b·∫Øt ƒë·∫ßu');
                        isValid = false;
                    }
                }

                // Validate days
                if (!hiddenInput.value) {
                    errors.push('Vui l√≤ng ch·ªçn √≠t nh·∫•t m·ªôt ng√†y trong tu·∫ßn');
                    const daysContainer = document.querySelector('.day-checkbox').parentElement;
                    showFieldError(daysContainer, 'Vui l√≤ng ch·ªçn √≠t nh·∫•t m·ªôt ng√†y');
                    isValid = false;
                }

                // Validate capacity
                const capacityInput = document.getElementById('SucChua');
                if (!capacityInput.value || capacityInput.value < 1 || capacityInput.value > 100) {
                    errors.push('S·ª©c ch·ª©a ph·∫£i t·ª´ 1 ƒë·∫øn 100 ng∆∞·ªùi');
                    showFieldError(capacityInput, 'S·ª©c ch·ª©a ph·∫£i t·ª´ 1 ƒë·∫øn 100');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                    // Show validation summary
                    const validationSummary = document.getElementById('validationSummary');
                    const errorList = document.getElementById('errorList');
                    errorList.innerHTML = '<ul class="list-disc list-inside">' + 
                        errors.map(err => `<li>${err}</li>`).join('') + '</ul>';
                    validationSummary.style.display = 'block';
                    
                    // Scroll to top
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }
            });

            function showFieldError(field, message) {
                const error = document.createElement('span');
                error.className = 'field-error text-red-500 text-sm mt-1 block';
                error.textContent = message;
                field.parentElement.appendChild(error);
            }

            // Show validation errors from server
            const serverErrors = document.querySelectorAll('.field-validation-error');
            if (serverErrors.length > 0) {
                document.getElementById('validationSummary').style.display = 'block';
            }
        });
    </script>
}
