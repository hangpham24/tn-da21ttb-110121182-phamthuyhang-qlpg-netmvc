@model GymManagement.Web.Data.Models.LopHoc

@{
    ViewData["Title"] = "Xóa Lớp Học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
            <div class="px-6 py-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                            </div>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold text-gray-900">Xóa Lớp Học</h1>
                            <p class="text-sm text-gray-600">Xác nhận xóa lớp học khỏi hệ thống</p>
                        </div>
                    </div>
                    <a href="@Url.Action("Index")" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Quay lại
                    </a>
                </div>
            </div>
        </div>

        <!-- Warning Alert -->
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">Cảnh báo!</h3>
                    <div class="mt-2 text-sm text-red-700">
                        <p>Bạn có chắc chắn muốn xóa lớp học này? Hành động này không thể hoàn tác và sẽ:</p>
                        <ul class="list-disc list-inside mt-2 space-y-1">
                            <li>Xóa vĩnh viễn thông tin lớp học</li>
                            <li>Hủy tất cả đăng ký liên quan</li>
                            <li>Xóa lịch học đã lên kế hoạch</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Class Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">Thông tin lớp học</h2>
            </div>
            <div class="px-6 py-4">
                <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Tên lớp học</dt>
                        <dd class="mt-1 text-sm text-gray-900 font-semibold">@Model.TenLop</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Sức chứa</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.SucChua người</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Thời gian</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.GioBatDau.ToString("HH:mm") - @Model.GioKetThuc.ToString("HH:mm")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Thứ trong tuần</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.ThuTrongTuan</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Huấn luyện viên</dt>
                        <dd class="mt-1 text-sm text-gray-900">@(Model.Hlv != null ? $"{Model.Hlv.Ho} {Model.Hlv.Ten}" : "Chưa phân công")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Trạng thái</dt>
                        <dd class="mt-1">
                            @if (Model.TrangThai == "OPEN")
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Đang mở
                                </span>
                            }
                            else if (Model.TrangThai == "CLOSED")
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    Đã đóng
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    @Model.TrangThai
                                </span>
                            }
                        </dd>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.MoTa))
                    {
                        <div class="sm:col-span-2">
                            <dt class="text-sm font-medium text-gray-500">Mô tả</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.MoTa</dd>
                        </div>
                    }
                </dl>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4">
                <form asp-action="Delete" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="LopHocId" />
                    <div class="flex items-center justify-end space-x-3">
                        <a href="@Url.Action("Index")" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Hủy bỏ
                        </a>
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            Xác nhận xóa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
