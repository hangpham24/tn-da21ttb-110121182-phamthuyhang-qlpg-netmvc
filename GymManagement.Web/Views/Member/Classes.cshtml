                    if (data.success) {
                        // Call VNPay Area to create payment URL
                        showNotification('‚úÖ ƒêang t·∫°o thanh to√°n...', 'success');
                        
                        fetch('/VNPayAPI/Home/CreatePayment', {
                            method: 'POST',
