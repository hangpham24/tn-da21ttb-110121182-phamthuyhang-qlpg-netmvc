    <script>
        function toggleTrainerMenu() {
            const menu = document.getElementById('trainer-menu');
            menu.classList.toggle('hidden');
        }

        function toggleTrainerMobileMenu() {
            const menu = document.getElementById('trainer-mobile-menu');
            menu.classList.toggle('hidden');
        }

        // Reports dropdown functions
        let reportsDropdownTimeout;
        
        function showReportsDropdown() {
            clearTimeout(reportsDropdownTimeout);
            const dropdown = document.getElementById('reportsDropdown');
            if (dropdown) {
                dropdown.classList.remove('hidden');
            }
        }
        
        function hideReportsDropdown() {
            reportsDropdownTimeout = setTimeout(() => {
                const dropdown = document.getElementById('reportsDropdown');
                if (dropdown) {
                    dropdown.classList.add('hidden');
                }
            }, 150); // Small delay to allow mouse to move to dropdown
        }

        // Close user menu when clicking outside
        document.addEventListener('click', function(event) {
            const userMenuButton = document.getElementById('trainer-menu-button');
            const userMenu = document.getElementById('trainer-menu');
            
            if (userMenuButton && userMenu && !userMenuButton.contains(event.target) && !userMenu.contains(event.target)) {
                userMenu.classList.add('hidden');
            }
        });
    </script>

