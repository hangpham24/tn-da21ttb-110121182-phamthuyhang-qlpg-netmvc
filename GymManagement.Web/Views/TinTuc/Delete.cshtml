@model GymManagement.Web.Models.DTOs.TinTucDetailDto
@{
    ViewData["Title"] = "Xóa tin tức";
    Layout = "_Layout";
}

<div class="min-h-screen bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <!-- Header -->
            <div class="bg-red-50 px-6 py-4 border-b border-red-100">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-lg font-semibold text-red-800">Xác nhận xóa tin tức</h3>
                        <p class="text-sm text-red-600">Hành động này không thể hoàn tác</p>
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="p-6">
                <div class="mb-6">
                    <p class="text-gray-700 mb-4">
                        Bạn có chắc chắn muốn xóa tin tức này không? Tất cả thông tin liên quan sẽ bị xóa vĩnh viễn.
                    </p>
                </div>

                <!-- News Details -->
                <div class="bg-gray-50 rounded-lg p-4 mb-6">
                    <h4 class="font-semibold text-gray-900 mb-3">Thông tin tin tức sẽ bị xóa:</h4>
                    
                    <div class="space-y-3">
                        <!-- Title and Description -->
                        <div class="flex items-start">
                            @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
                            {
                                <img src="@Model.AnhDaiDien" alt="@Model.TieuDe" class="w-20 h-20 rounded-lg object-cover mr-4" />
                            }
                            else
                            {
                                <div class="w-20 h-20 rounded-lg bg-gray-200 flex items-center justify-center mr-4">
                                    <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                            }
                            <div class="flex-1">
                                <h5 class="font-medium text-gray-900">@Model.TieuDe</h5>
                                <p class="text-sm text-gray-600 mt-1">@Model.MoTaNgan</p>
                            </div>
                        </div>

                        <!-- Metadata -->
                        <div class="grid grid-cols-2 gap-4 text-sm">
                            <div>
                                <span class="text-gray-500">Tác giả:</span>
                                <span class="text-gray-900 ml-1">@Model.TenTacGia</span>
                            </div>
                            <div>
                                <span class="text-gray-500">Ngày tạo:</span>
                                <span class="text-gray-900 ml-1">@Model.NgayTao.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div>
                                <span class="text-gray-500">Trạng thái:</span>
                                @{
                                    var (statusClass, statusText) = Model.TrangThai switch
                                    {
                                        "DRAFT" => ("text-gray-600", "Nháp"),
                                        "PUBLISHED" => ("text-green-600", "Đã xuất bản"),
                                        "ARCHIVED" => ("text-yellow-600", "Lưu trữ"),
                                        _ => ("text-gray-600", Model.TrangThai)
                                    };
                                }
                                <span class="@statusClass ml-1 font-medium">@statusText</span>
                            </div>
                            <div>
                                <span class="text-gray-500">Lượt xem:</span>
                                <span class="text-gray-900 ml-1">@Model.LuotXem</span>
                            </div>
                        </div>

                        @if (Model.NoiBat)
                        {
                            <div class="text-sm">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    ⭐ Tin tức nổi bật
                                </span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Warning -->
                <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">Lưu ý quan trọng</h3>
                            <div class="mt-2 text-sm text-red-700">
                                <ul class="list-disc list-inside space-y-1">
                                    <li>Hành động này không thể hoàn tác</li>
                                    <li>Tất cả dữ liệu liên quan sẽ bị xóa vĩnh viễn</li>
                                    <li>Ảnh đính kèm (nếu có) cũng sẽ bị xóa khỏi hệ thống</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="TinTucId" />
                    
                    <div class="flex justify-end space-x-3">
                        <a href="@Url.Action("Index")" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Hủy bỏ
                        </a>
                        <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                            Xác nhận xóa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
