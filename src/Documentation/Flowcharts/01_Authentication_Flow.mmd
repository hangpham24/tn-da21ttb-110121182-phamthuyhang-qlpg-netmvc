%% QUY TRÌNH ĐĂNG NHẬP - AUTHENTICATION FLOW
%% Tối ưu cho Draw.io import

flowchart TD
    A[Người dùng truy cập] --> B[Nhập thông tin đăng nhập]
    B --> C{Thông tin hợp lệ?}
    C -->|Không| D[Hiển thị lỗi]
    D --> B
    C -->|Có| E{Tài khoản hoạt động?}
    E -->|Không| F[Thông báo tài khoản bị khóa]
    E -->|Có| G[Đăng nhập thành công]
    G --> H{Vai trò người dùng?}
    H -->|Admin| I[Trang quản trị]
    H -->|Trainer| J[Trang huấn luyện viên]
    H -->|Member| K[Trang thành viên]

    %% Styling
    classDef startNode fill:#e3f2fd,stroke:#1976d2,stroke-width:2px
    classDef successNode fill:#e8f5e8,stroke:#388e3c,stroke-width:2px
    classDef errorNode fill:#ffebee,stroke:#d32f2f,stroke-width:2px
    classDef decisionNode fill:#e1f5fe,stroke:#0288d1,stroke-width:2px

    class A startNode
    class G,I,J,K successNode
    class D,F errorNode
    class C,E,H decisionNode
