        // Setup walk-in modal event listeners
        function setupWalkInModalListeners() {
            const continueToPaymentBtn = document.getElementById('continueToPaymentBtn');
            const backToInfoBtn = document.getElementById('backToInfoBtn');
            const processPaymentBtn = document.getElementById('processPaymentBtn');

            if (continueToPaymentBtn) continueToPaymentBtn.addEventListener('click', showPaymentStep);
            if (backToInfoBtn) backToInfoBtn.addEventListener('click', showInfoStep);
            if (processPaymentBtn) processPaymentBtn.addEventListener('click', processWalkInPayment);
        }

        // Call setup when DOM is ready
        setupWalkInModalListeners();

        // Handle VNPay return for walk-in customers
        function handleVNPayReturn() {
            const urlParams = new URLSearchParams(window.location.search);
            const paymentStatus = urlParams.get('paymentStatus');
            const walkIn = urlParams.get('walkIn');
            const message = urlParams.get('message');

            if (walkIn === 'true' && paymentStatus) {
                if (paymentStatus === 'success') {
                    // Get stored customer info
                    const customerInfo = sessionStorage.getItem('walkInCustomerInfo');
                    if (customerInfo) {
                        const info = JSON.parse(customerInfo);

                        // Show success message
                        alert('✅ ' + decodeURIComponent(message || 'Thanh toán VNPay thành công!'));

                        // Auto check-in the customer
                        processWalkInCheckInAfterPayment(info);

                        // Clear stored info
                        sessionStorage.removeItem('walkInCustomerInfo');
                    } else {
                        alert('✅ ' + decodeURIComponent(message || 'Thanh toán VNPay thành công!'));
                    }
                } else if (paymentStatus === 'error') {
                    alert('❌ ' + decodeURIComponent(message || 'Thanh toán VNPay thất bại!'));
                }

                // Clean URL
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        }

        // Process walk-in check-in after successful VNPay payment
        async function processWalkInCheckInAfterPayment(customerInfo) {
            try {
                // Find the payment record and auto check-in
                const response = await fetch('/Reception/WalkInConfirmPayment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({
                        paymentId: customerInfo.thanhToanId,
                        guestId: 0 // Will be found by payment record
                    })
                });

                const result = await response.json();

                if (result.success) {
                    // Show payment confirmation
                    showPaymentConfirmation({
                        customerName: customerInfo.name,
                        amount: 50000,
                        paymentMethod: 'VNPay',
                        transactionId: customerInfo.thanhToanId
                    });

                    // Update stats
                    updateRealtimeStats();
                } else {
                    console.error('Auto check-in failed:', result.message);
                }
            } catch (error) {
                console.error('Error in auto check-in after VNPay:', error);
            }
        }

        // Check for VNPay return on page load
        handleVNPayReturn();
    </script>
