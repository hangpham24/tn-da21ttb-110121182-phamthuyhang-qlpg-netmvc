@model IEnumerable<GymManagement.Web.Data.Models.DiemDanh>
@{
    ViewData["Title"] = "Quản lý điểm danh";
    Layout = "_Layout";
}

@* CSRF Token for AJAX requests *@
<form id="csrfForm" style="display: none;">
    @Html.AntiForgeryToken()
</form>

<div class="w-full py-8" style="width: 100% !important; max-width: none !important; margin: 0 !important; padding-left: 0 !important; padding-right: 0 !important;">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">🏋️ Quản lý điểm danh</h1>
                <p class="text-gray-600 mt-2">Hệ thống check-in tự động bằng nhận diện khuôn mặt và quản lý điểm danh</p>
            </div>
            <div class="flex space-x-3">
                <div class="bg-white rounded-lg shadow-md px-4 py-2">
                    <div class="text-sm text-gray-600">Trạng thái hệ thống</div>
                    <div id="systemStatus" class="text-lg font-bold text-yellow-600">Đang khởi tạo...</div>
                </div>
                <a href="@Url.Action("AttendanceReport")" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
                    📊 Báo cáo
                </a>
            </div>
        </div>
    </div>

    <!-- Tab Navigation -->
    <div class="bg-white rounded-lg shadow-md mb-8">
        <div class="border-b border-gray-200">
            <nav class="-mb-px flex space-x-8 px-6" aria-label="Tabs">
                <button id="faceIdTab" class="tab-button border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" onclick="switchTab('faceId')">
                    🔍 FaceID
                </button>
                <button id="walkInTab" class="tab-button border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" onclick="switchTab('walkIn')">
                    🚶 Khách Vãng Lai
                </button>
                <button id="attendanceTab" class="tab-button active border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" onclick="switchTab('attendance')">
                    📋 Danh sách điểm danh
                </button>
            </nav>
        </div>
    </div>

    <!-- Tab Content -->
    <div id="faceIdContent" class="tab-content hidden">
        <!-- Face Recognition Section -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">🔍 Face Recognition Test</h2>

            <!-- Camera Section -->
            <div class="mb-4">
                <div class="relative bg-gray-100 rounded-lg overflow-hidden" style="height: 300px;">
                    <video id="recognizeVideo" class="w-full h-full object-cover" autoplay muted></video>
                    <canvas id="recognizeCanvas" class="absolute top-0 left-0 w-full h-full pointer-events-none"></canvas>

                    <!-- Status Overlay -->
                    <div class="absolute bottom-4 left-4 right-4">
                        <div class="bg-black bg-opacity-75 text-white px-3 py-2 rounded-lg text-sm">
                            <div id="recognizeCameraStatus">📷 Camera not started</div>
                            <div id="recognizeFaceStatus">👁️ No face detected</div>
                            <div id="recognizeConfidenceStatus">🎯 Confidence: N/A</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Class Selection -->
            <div class="mb-4">
                <label for="classSelect" class="block text-sm font-medium text-gray-700 mb-2">🎓 Chọn lớp học (tùy chọn)</label>
                <select id="classSelect" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="">🏃‍♂️ Tập tự do</option>
                    <!-- Classes will be loaded here -->
                </select>
                <p class="text-xs text-gray-500 mt-1">Admin có thể chọn lớp học mà thành viên sẽ tham gia</p>
            </div>

            <!-- Controls -->
            <div class="flex space-x-3 mb-4">
                <button id="startRecognizeCameraBtn" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
                    📷 Start Camera
                </button>
                <button id="stopRecognizeCameraBtn" class="flex-1 bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
                    ⏹️ Stop Camera
                </button>
            </div>

            <button id="recognizeButton" class="w-full bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" disabled>
                🔍 Recognize Face & Check-in
            </button>

            @* <!-- Debug button for testing -->
            <button onclick="openWalkInModal()" class="w-full bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg font-medium transition-colors mt-2">
                🧪 Test Walk-in Modal
            </button> *@

            <!-- Results -->
            <div id="recognizeResults" class="mt-4 hidden">
                <div class="bg-gray-50 rounded-lg p-4">
                    <h3 class="font-medium text-gray-900 mb-2">Recognition Results:</h3>
                    <div id="recognizeResultContent"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Walk-in Tab Content -->
    <div id="walkInContent" class="tab-content hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Walk-in Registration Form -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-bold text-gray-900 mb-4">🚶 Đăng Ký Khách Vãng Lai</h2>

                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Họ và tên *</label>
                        <input type="text" id="guestName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Nguyễn Văn A">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại *</label>
                        <input type="tel" id="guestPhone" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="0123456789">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email (tùy chọn)</label>
                        <input type="email" id="guestEmail" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="example@email.com">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Ghi chú</label>
                        <textarea id="guestNote" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Ghi chú thêm..."></textarea>
                    </div>

                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-sm font-medium text-blue-800">Vé tập một buổi</span>
                            <span class="text-lg font-bold text-blue-900">50,000 VNĐ</span>
                        </div>
                        <p class="text-xs text-blue-600">Bao gồm: Sử dụng thiết bị, phòng tập, khăn tắm</p>
                    </div>

                    <button id="walkInCheckInBtn" class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
                        🚶 Đăng Ký & Check-in
                    </button>
                </div>
            </div>

            <!-- Walk-in Statistics & Recent -->
            <div class="space-y-6">
                <!-- Today's Walk-ins -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">📊 Khách Vãng Lai Hôm Nay</h3>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div class="text-center">
                            <div class="text-2xl font-bold text-green-600" id="todayWalkIns">0</div>
                            <div class="text-sm text-gray-600">Đã đăng ký</div>
                        </div>
                        <div class="text-center">
                            <div class="text-2xl font-bold text-blue-600" id="todayWalkInRevenue">0</div>
                            <div class="text-sm text-gray-600">Doanh thu (VNĐ)</div>
                        </div>
                    </div>
                </div>

                <!-- Recent Walk-ins -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">🕐 Khách Vãng Lai Gần Đây</h3>

                    <div id="recentWalkIns" class="space-y-3">
                        <div class="text-center text-gray-500 py-8">
                            <div class="text-4xl mb-2">🚶</div>
                            <p>Chưa có khách vãng lai nào hôm nay</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance List Tab Content - FULL WIDTH REDESIGN -->
    <div id="attendanceContent" class="tab-content active" style="width: 100% !important; max-width: none !important;">

        <!-- Statistics Cards - Full Width -->
        <div class="w-full mb-6" style="width: 100% !important; max-width: none !important;">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <!-- Today's Attendance -->
                <div class="bg-green-600 rounded-xl shadow-lg p-6 text-white">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-green-100 text-sm font-medium">Hôm nay</p>
                            <p class="text-3xl font-bold" id="todayAttendance">@(Model?.Count(d => d.ThoiGian.Date == DateTime.Today) ?? 0)</p>
                            <p class="text-green-100 text-xs mt-1">Lượt check-in</p>
                        </div>
                        <div class="bg-white bg-opacity-20 rounded-full p-3">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Total Attendance -->
                <div class="bg-blue-600 rounded-xl shadow-lg p-6 text-white">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-blue-100 text-sm font-medium">Tổng cộng</p>
                            <p class="text-3xl font-bold">@(Model?.Count() ?? 0)</p>
                            <p class="text-blue-100 text-xs mt-1">Tất cả thời gian</p>
                        </div>
                        <div class="bg-white bg-opacity-20 rounded-full p-3">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- This Week -->
                <div class="bg-yellow-600 rounded-xl shadow-lg p-6 text-white">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-yellow-100 text-sm font-medium">Tuần này</p>
                            <p class="text-3xl font-bold">@(Model?.Count(d => d.ThoiGian >= DateTime.Today.AddDays(-(int)DateTime.Today.DayOfWeek)) ?? 0)</p>
                            <p class="text-yellow-100 text-xs mt-1">Lượt check-in</p>
                        </div>
                        <div class="bg-white bg-opacity-20 rounded-full p-3">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Successful Recognition -->
                <div class="bg-purple-600 rounded-xl shadow-lg p-6 text-white">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-purple-100 text-sm font-medium">Nhận diện thành công</p>
                            <p class="text-3xl font-bold">@(Model?.Count(d => d.KetQuaNhanDang == true) ?? 0)</p>
                            <p class="text-purple-100 text-xs mt-1">Tỷ lệ: @(Model?.Any() == true ? Math.Round((double)(Model.Count(d => d.KetQuaNhanDang == true) * 100) / Model.Count(), 1) : 0)%</p>
                        </div>
                        <div class="bg-white bg-opacity-20 rounded-full p-3">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Advanced Filters - Full Width -->
        <div class="w-full bg-white rounded-xl shadow-lg p-6 mb-6" style="width: 100% !important; max-width: none !important;">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                    </svg>
                    Bộ lọc nâng cao
                </h3>
                <button onclick="resetFilters()" class="text-sm text-gray-500 hover:text-gray-700 flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    Đặt lại
                </button>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-6 gap-4">
                <!-- Search -->
                <div class="lg:col-span-2">
                    <label for="searchInput" class="block text-sm font-medium text-gray-700 mb-2">🔍 Tìm kiếm thành viên</label>
                    <input type="text" id="searchInput" placeholder="Nhập tên, email hoặc ID..."
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                </div>

                <!-- Status Filter -->
                <div>
                    <label for="statusFilter" class="block text-sm font-medium text-gray-700 mb-2">📊 Trạng thái</label>
                    <select id="statusFilter" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">Tất cả</option>
                        <option value="Present">✅ Có mặt</option>
                        <option value="Absent">❌ Vắng mặt</option>
                        <option value="Late">⏰ Đi muộn</option>
                    </select>
                </div>

                <!-- Recognition Filter -->
                <div>
                    <label for="recognitionFilter" class="block text-sm font-medium text-gray-700 mb-2">🤖 Nhận diện</label>
                    <select id="recognitionFilter" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">Tất cả</option>
                        <option value="face">🤖 Face ID</option>
                        <option value="qr">📱 QR Code</option>
                        <option value="true">✅ AI Thành công</option>
                        <option value="false">❌ AI Thất bại</option>
                        <option value="manual">👤 Thủ công</option>
                    </select>
                </div>

                <!-- Date Filter -->
                <div>
                    <label for="dateFilter" class="block text-sm font-medium text-gray-700 mb-2">📅 Ngày</label>
                    <input type="date" id="dateFilter"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>

                <!-- Export Button -->
                <div class="flex items-end">
                    <button onclick="exportAttendance()" class="group w-full bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-2.5 rounded-lg font-medium transition-all duration-200 transform hover:scale-102 flex items-center justify-center space-x-2 shadow-lg hover:shadow-emerald-500/30">
                        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4 4v16a2 2 0 002 2h12a2 2 0 002-2V8.342a2 2 0 00-.602-1.43l-4.44-4.342A2 2 0 0013.56 2H6a2 2 0 00-2 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M14 2v4a2 2 0 002 2h4M8 13h8m-8 3h4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                            <path class="text-white transition-transform duration-200 transform group-hover:translate-y-0.5" d="M8.5 17.5l2 2 2-2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        <span class="relative">
                            <span class="flex items-center">
                                <img src="data:image/png;base64," alt="Excel" class="w-4 h-4 mr-1.5" />
                                Xuất Excel
                            </span>
                            <span class="absolute left-0 -bottom-3.5 w-full text-[10px] text-white/80 opacity-0 group-hover:opacity-100 transition-opacity text-center">
                                .xlsx
                            </span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
        <!-- Data Table or Empty State - Full Width -->
        @if (Model != null && Model.Any())
        {
            <!-- Modern Data Table -->
            <div class="w-full bg-white rounded-xl shadow-lg overflow-hidden" style="width: 100% !important; max-width: none !important;">
                <!-- Table Header -->
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                            Danh sách điểm danh
                        </h3>
                        <div class="flex items-center space-x-2 text-sm text-gray-600">
                            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full font-medium">
                                Tổng: @Model.Count() bản ghi
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Table Content -->
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <div class="flex items-center space-x-1">
                                        <span>👤 Thành viên</span>
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <div class="flex items-center space-x-1">
                                        <span>⏰ Thời gian</span>
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <div class="flex items-center space-x-1">
                                        <span>🎓 Lớp học</span>
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <div class="flex items-center space-x-1">
                                        <span>📊 Trạng thái</span>
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <div class="flex items-center space-x-1">
                                        <span>🤖 Nhận diện</span>
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <div class="flex items-center space-x-1">
                                        <span>📝 Ghi chú</span>
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    <div class="flex items-center space-x-1">
                                        <span>⚡ Hành động</span>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="attendanceTable" class="bg-white divide-y divide-gray-200">
                            @foreach (var diemDanh in Model.OrderByDescending(d => d.ThoiGian))
                            {
                                var recognitionType = diemDanh.LoaiCheckIn == "FaceRecognition" ? "face" :
                                                     diemDanh.LoaiCheckIn == "QRCode" ? "qr" :
                                                     diemDanh.KetQuaNhanDang.HasValue ? (diemDanh.KetQuaNhanDang.Value ? "true" : "false") : "manual";

                                <tr class="hover:bg-blue-50 attendance-row transition-colors duration-200"
                                    data-member="@((diemDanh.ThanhVien?.Ho + " " + diemDanh.ThanhVien?.Ten)?.ToLower())"
                                    data-status="@diemDanh.TrangThai"
                                    data-recognition="@recognitionType"
                                    data-date="@diemDanh.ThoiGian.ToString("yyyy-MM-dd")"
                                    data-checkin-type="@diemDanh.LoaiCheckIn">

                                    <!-- Member -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-12 w-12">
                                                <div class="h-12 w-12 rounded-full bg-blue-600 flex items-center justify-center shadow-md">
                                                    <span class="text-lg font-bold text-white">
                                                        @(diemDanh.ThanhVien?.Ho?.FirstOrDefault() ?? 'U')
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-semibold text-gray-900">
                                                    @diemDanh.ThanhVien?.Ho @diemDanh.ThanhVien?.Ten
                                                </div>
                                                <div class="text-sm text-gray-500">
                                                    @diemDanh.ThanhVien?.Email
                                                </div>
                                            </div>
                                        </div>
                                    </td>

                                    <!-- Time -->
                                    <td class="px-6 py-4 whitespace-nowrap">
