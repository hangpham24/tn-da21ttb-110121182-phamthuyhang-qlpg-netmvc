                alert('Có lỗi xảy ra khi xử lý thanh toán');
            } finally {
                processBtn.disabled = false;
                processBtn.innerHTML = '💳 Thanh toán & Check-in';
            }
        }

        // Cash Payment Processing
        async function processCashPayment(name, phone, email, note) {
            try {
                // Get face descriptor from pending storage
                let faceDescriptor = null;
                if (pendingWalkInFaceDescriptor && pendingWalkInFaceDescriptor.length > 0) {
                    faceDescriptor = pendingWalkInFaceDescriptor;
                    console.log('💾 Using pending face descriptor for registration:', faceDescriptor.length, 'dimensions');
                } else {
                    console.warn('⚠️ No pending face descriptor available');
                }

                const requestData = {
                    fullName: name,
                    phoneNumber: phone,
                    email: email,
                    note: note,
                    paymentMethod: 'CASH',
                    amount: 50000,
                    faceDescriptor: faceDescriptor
                };

                console.log('🔍 DEBUG: Sending request data:', {
                    ...requestData,
                    faceDescriptor: faceDescriptor ? `Array[${faceDescriptor.length}]` : 'null'
                });

                const response = await fetch('/Reception/WalkInRegisterWithPayment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify(requestData)
                });

                const result = await response.json();

                if (result.success) {
                    // Clear pending face descriptor after successful registration
                    if (faceDescriptor) {
                        pendingWalkInFaceDescriptor = null;
                        pendingWalkInFaceData = null;
                        console.log('🗑️ Pending face descriptor cleared after successful registration');
                        alert('✅ Thanh toán tiền mặt và check-in thành công! Khuôn mặt đã được lưu để checkout.');
                    } else {
                        alert('✅ Thanh toán tiền mặt và check-in thành công!');
                    }
                    closeWalkInModal();

                    // Update Recognition Results to show success
                    updateRecognitionResultsAfterWalkIn(name, result.transactionId || 'CASH_' + Date.now());

                    // Show payment confirmation
                    showPaymentConfirmation({
                        customerName: name,
                        amount: 50000,
                        paymentMethod: 'Tiền mặt',
                        transactionId: result.transactionId || 'CASH_' + Date.now()
                    });

                    // Refresh stats
                    updateRealtimeStats();
                } else {
                    alert('❌ ' + (result.message || 'Thanh toán thất bại'));
                }
            } catch (error) {
                console.error('❌ Cash payment error:', error);
                throw error;
            }
        }

        // VNPay Payment Processing
        async function processVNPayPayment(name, phone, email, note) {
            try {
                // Step 1: Create walk-in VNPay payment record
                const response = await fetch('/Reception/CreateWalkInVNPayPayment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({
                        fullName: name,
                        phoneNumber: phone,
                        email: email,
                        note: note,
                        amount: 50000
                    })
                });

                const result = await response.json();

                if (result.success && result.thanhToanId) {
                    // Step 2: Create VNPay payment URL using VNPay API
                    const vnpayResponse = await fetch('/VNPayAPI/Home/CreatePayment', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({
                            thanhToanId: result.thanhToanId
                        })
                    });

                    const vnpayResult = await vnpayResponse.json();

                    if (vnpayResult.success && vnpayResult.paymentUrl) {
                        alert('ℹ️ Đang chuyển hướng đến VNPay...');

                        // Store customer info for after payment return
                        sessionStorage.setItem('walkInCustomerInfo', JSON.stringify({
                            name, phone, email, note, thanhToanId: result.thanhToanId
                        }));

                        // Redirect to VNPay
                        window.location.href = vnpayResult.paymentUrl;
                    } else {
                        alert('❌ ' + (vnpayResult.message || 'Không thể tạo URL thanh toán VNPay'));
                    }
                } else {
                    alert('❌ ' + (result.message || 'Không thể tạo thanh toán VNPay'));
                }
            } catch (error) {
                console.error('❌ VNPay payment error:', error);
                throw error;
            }
        }

