        // Continuous face detection (học theo FaceTest)
        function startContinuousDetection() {
            if (recognitionInterval) {
                clearInterval(recognitionInterval);
            }

            recognitionInterval = setInterval(async () => {
                if (!isCameraRunning || !isModelLoaded || !video) return;

                try {
                    const detections = await faceapi.detectAllFaces(video, new faceapi.TinyFaceDetectorOptions())
                        .withFaceLandmarks()
                        .withFaceDescriptors();

                    // Clear canvas
                    ctx.clearRect(0, 0, canvas.width, canvas.height);

                    if (detections.length > 0) {
                        recognizeFaceStatus.textContent = `👁️ ${detections.length} face(s) detected`;

                        // Draw face boxes
                        const resizedDetections = faceapi.resizeResults(detections, {
                            width: canvas.width,
                            height: canvas.height
                        });

                        faceapi.draw.drawDetections(canvas, resizedDetections);
                        faceapi.draw.drawFaceLandmarks(canvas, resizedDetections);

                        // Store the first face descriptor for recognition
                        if (detections[0].descriptor) {
                            currentRecognizeDescriptor = detections[0].descriptor;
                            console.log('🔍 Face descriptor captured:', currentRecognizeDescriptor.length, 'dimensions');
                        }
                    } else {
                        recognizeFaceStatus.textContent = '👁️ No face detected';
                        currentRecognizeDescriptor = null;
                    }
                } catch (error) {
                    console.error('❌ Error in continuous detection:', error);
                }
            }, 100); // Check every 100ms
        }

