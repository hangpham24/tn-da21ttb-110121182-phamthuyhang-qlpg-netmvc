@model GymManagement.Web.Models.DTOs.GoiTapDto
@{
    ViewData["Title"] = "Chi tiết gói tập";
    Layout = "_Layout";
}

<div class="p-6">
    <!-- Simple Header -->
    <div class="mb-6">
        <div class="flex items-center gap-4 mb-4">
            <a href="@Url.Action("Index")" class="text-gray-600 hover:text-gray-800 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Chi tiết gói tập</h1>
                <p class="text-gray-600 text-sm">Thông tin chi tiết về gói tập: <span class="font-semibold">@Model.TenGoi</span></p>
            </div>
        </div>
    </div>

    <!-- Single Column Layout for Better Space Usage -->
    <div class="max-w-6xl mx-auto">
        <!-- Main Package Card (Full Width) -->
        <div>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <!-- Package Header -->
                <div class="bg-blue-600 p-8 text-white">
                    <div class="flex flex-col lg:flex-row lg:justify-between lg:items-center">
                        <div class="mb-4 lg:mb-0">
                            <h2 class="text-3xl font-bold mb-3">@Model.TenGoi</h2>
                            <div class="flex items-center space-x-4">
                                <span class="px-4 py-2 text-sm rounded-full @(Model.TrangThai == "ACTIVE" ? "bg-green-500" : "bg-gray-500")">
                                    @(Model.TrangThai == "ACTIVE" ? "Hoạt động" : "Tạm dừng")
                                </span>
                                <span class="text-blue-200 text-sm">ID: #@Model.GoiTapId</span>
                            </div>
                        </div>
                        <div class="text-center lg:text-right">
                            <div class="text-4xl font-bold mb-2">@Model.Gia.ToString("N0")</div>
                            <div class="text-lg opacity-90">VNĐ / @Model.ThoiHanThang tháng</div>
                            @if (Model.SoBuoiToiDa.HasValue)
                            {
                                <div class="text-sm opacity-75 mt-2">@Model.SoBuoiToiDa buổi tập</div>
                            }
                            else
                            {
                                <div class="text-sm opacity-75 mt-2">Không giới hạn buổi</div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Package Details -->
                <div class="p-8">
                    <!-- Action Buttons Section -->
                    <div class="flex flex-wrap gap-4 mb-8 justify-center">
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("Edit", new { id = Model.GoiTapId })"
                               class="flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-all duration-200 hover:shadow-lg">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Chỉnh sửa gói tập
                            </a>
                            <button type="button" onclick="deletePackage(@Model.GoiTapId, '@Model.TenGoi')"
                                    class="flex items-center px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition-all duration-200 hover:shadow-lg">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                                Xóa gói tập
                            </button>
                        }
                        @if (User.IsInRole("Member"))
                        {
                            <button onclick="registerPackage(@Model.GoiTapId)"
                                    class="flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-all duration-200 hover:shadow-lg">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Đăng ký gói này
                            </button>
                        }
                        <a href="@Url.Action("Index")"
                           class="flex items-center px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg font-medium transition-all duration-200">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                            </svg>
                            Quay lại danh sách
                        </a>
                    </div>

                    <!-- Statistics Cards - 4 columns for better display -->
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                        <!-- ID & Basic Info -->
                        <div class="text-center p-6 bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl border border-blue-200">
                            <div class="text-sm text-gray-600 mb-2">ID Gói</div>
                            <div class="text-3xl font-bold text-blue-600">#@Model.GoiTapId</div>
                            <div class="text-sm text-gray-500 mt-1">@Model.NgayTao.ToString("dd/MM/yyyy")</div>
                        </div>

                        <!-- Duration -->
                        <div class="text-center p-6 bg-gradient-to-br from-green-50 to-green-100 rounded-xl border border-green-200">
                            <div class="text-sm text-gray-600 mb-2">Thời hạn</div>
                            <div class="text-3xl font-bold text-green-600">@Model.ThoiHanThang</div>
                            <div class="text-sm text-gray-500 mt-1">tháng</div>
                        </div>

                        <!-- Sessions -->
                        <div class="text-center p-6 bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl border border-purple-200">
                            <div class="text-sm text-gray-600 mb-2">Số buổi</div>
                            @if (Model.SoBuoiToiDa.HasValue)
                            {
                                <div class="text-3xl font-bold text-purple-600">@Model.SoBuoiToiDa</div>
                                <div class="text-sm text-gray-500 mt-1">buổi tập</div>
                            }
                            else
                            {
                                <div class="text-2xl font-bold text-purple-600">∞</div>
                                <div class="text-sm text-gray-500 mt-1">Không giới hạn</div>
                            }
                        </div>

                        <!-- Registrations -->
                        <div class="text-center p-6 bg-gradient-to-br from-orange-50 to-orange-100 rounded-xl border border-orange-200">
                            <div class="text-sm text-gray-600 mb-2">Đăng ký</div>
                            <div class="text-3xl font-bold text-orange-600">@(Model.SoLuongDangKy ?? 0)</div>
                            <div class="text-sm text-gray-500 mt-1">người</div>
                        </div>
                    </div>

                    <!-- Package Type & Pricing Section -->
                    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Package Type -->
                        <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                </svg>
                                Loại gói tập
                            </h3>
                            <div class="text-center">
                                @if (!string.IsNullOrEmpty(Model.LoaiGoi))
                                {
                                    <span class="inline-block px-6 py-3 text-lg rounded-full bg-blue-600 text-white font-semibold">
                                        @switch (Model.LoaiGoi)
                                        {
                                            case "BASIC": <span>Cơ bản</span>; break;
                                            case "PREMIUM": <span>Cao cấp</span>; break;
                                            case "VIP": <span>VIP</span>; break;
                                            case "STUDENT": <span>Sinh viên</span>; break;
                                            case "FAMILY": <span>Gia đình</span>; break;
                                            default: <span>@Model.LoaiGoi</span>; break;
                                        }
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-block px-6 py-3 text-lg rounded-full bg-gray-400 text-white font-semibold">Chưa phân loại</span>
                                }
                            </div>
                        </div>

                        <!-- Pricing Info -->
                        <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                                </svg>
                                Thông tin giá
                            </h3>
                            <div class="space-y-3">
                                <div class="flex justify-between items-center">
                                    <span class="text-gray-600">Giá/tháng:</span>
                                    <span class="font-semibold text-green-600">@((Model.Gia / Model.ThoiHanThang).ToString("N0")) VNĐ</span>
                                </div>
                                @if (Model.SoBuoiToiDa.HasValue)
                                {
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">Giá/buổi:</span>
                                        <span class="font-semibold text-purple-600">@((Model.Gia / Model.SoBuoiToiDa.Value).ToString("N0")) VNĐ</span>
                                    </div>
                                }
                                <div class="flex justify-between items-center">
                                    <span class="text-gray-600">Tiết kiệm:</span>
                                    <span class="font-semibold text-orange-600">@(((Model.Gia / Model.ThoiHanThang) * 0.1m).ToString("N0")) VNĐ</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Description Section -->
                    <div class="mt-8">
                        <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                            <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            Mô tả gói tập
                        </h3>
                        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-6 rounded-xl border-l-4 border-blue-500">
                            @if (!string.IsNullOrEmpty(Model.MoTa))
                            {
                                <p class="text-gray-700 leading-relaxed text-lg">@Model.MoTa</p>
                            }
                            else
                            {
                                <p class="text-gray-700 leading-relaxed text-lg">Gói tập @Model.TenGoi với thời hạn @Model.ThoiHanThang tháng, phù hợp cho những ai muốn duy trì sức khỏe và rèn luyện thể chất một cách bài bản và khoa học.</p>
                            }
                        </div>
                    </div>

                    <!-- Features Section -->
                    <div class="mt-8">
                        <h3 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                            <svg class="w-6 h-6 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Quyền lợi của gói tập
                        </h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                            <div class="bg-green-50 p-6 rounded-xl border-l-4 border-green-500 text-center">
                                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                </div>
                                <h4 class="font-semibold text-green-800 mb-2">Thiết bị đầy đủ</h4>
                                <p class="text-green-700 text-sm">Truy cập tất cả máy tập và dụng cụ trong phòng gym</p>
                            </div>
                            <div class="bg-blue-50 p-6 rounded-xl border-l-4 border-blue-500 text-center">
                                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <h4 class="font-semibold text-blue-800 mb-2">Thời gian linh hoạt</h4>
                                <p class="text-blue-700 text-sm">Tập luyện mọi lúc trong giờ hoạt động của phòng gym</p>
                            </div>
                            <div class="bg-purple-50 p-6 rounded-xl border-l-4 border-purple-500 text-center">
                                <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                                <h4 class="font-semibold text-purple-800 mb-2">Hỗ trợ từ PT</h4>
                                <p class="text-purple-700 text-sm">Được tư vấn và hướng dẫn từ các huấn luyện viên chuyên nghiệp</p>
                            </div>
                            <div class="bg-orange-50 p-6 rounded-xl border-l-4 border-orange-500 text-center">
                                <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                    </svg>
                                </div>
                                <h4 class="font-semibold text-orange-800 mb-2">Theo dõi tiến độ</h4>
                                <p class="text-orange-700 text-sm">Hệ thống theo dõi và đánh giá kết quả tập luyện</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



@section Scripts {
    <script>
        function registerPackage(packageId) {
            if (confirm('Bạn có chắc chắn muốn đăng ký gói tập này không?')) {
                // Redirect to registration page or show registration modal
                window.location.href = '@Url.Action("Create", "DangKy")?packageId=' + packageId;
            }
        }

        // Delete package function
        function deletePackage(packageId, packageName) {
            confirmDelete({
                url: '@Url.Action("DeleteConfirmed")' + '?id=' + packageId,
                itemName: packageName,
                itemType: 'gói tập',
                onSuccess: function(data) {
                    window.location.href = '@Url.Action("Index")';
                },
                onError: function(error) {
                    showNotification('Có lỗi xảy ra khi xóa gói tập.', 'error');
                }
            });
        }
    </script>
}
