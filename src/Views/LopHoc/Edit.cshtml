@model GymManagement.Web.Data.Models.LopHoc
@{
    ViewData["Title"] = "Chỉnh sửa lớp học";
    Layout = "_Layout";
}

<div class="min-h-screen bg-gray-50">
    <!-- Header Section -->
    <div class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between py-6">
                <div class="flex items-center space-x-4">
                    <a href="@Url.Action("Index")" class="inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Quay lại danh sách
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                            <svg class="w-7 h-7 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Chỉnh sửa lớp học</h1>
                        <p class="text-sm text-gray-600">Cập nhật thông tin: <span class="font-medium text-gray-900">@Model.TenLop</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <form asp-action="Edit" method="post" class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden" id="editClassForm">
            @Html.AntiForgeryToken()
            <input asp-for="LopHocId" type="hidden" />

            <!-- Form Header -->
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Chỉnh sửa lớp học</h3>
                <p class="mt-1 text-sm text-gray-600">Cập nhật thông tin cho lớp học: <span class="font-medium text-gray-900">@Model.TenLop</span></p>
            </div>

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-400 p-4 m-6 mb-0" style="display: none;" id="validationSummary">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">Có lỗi xảy ra khi cập nhật lớp học</h3>
                        <div class="mt-2 text-sm text-red-700" id="errorList">
                            <p>Vui lòng kiểm tra lại thông tin và thử lại.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Warning Message for Schedule Conflicts -->
            @if (ViewBag.ShowWarningConfirmation == true)
            {
                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 m-6 mb-0" id="warningMessage">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-yellow-800">Cảnh báo trùng lịch</h3>
                            <div class="mt-2 text-sm text-yellow-700">
                                <p>@ViewBag.WarningMessage</p>
                                <div class="mt-4 flex space-x-3">
                                    <button type="submit" name="confirmWarning" value="true" class="bg-yellow-600 hover:bg-yellow-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                                        Vẫn cập nhật lớp học
                                    </button>
                                    <button type="button" onclick="window.history.back();" class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-md text-sm font-medium">
                                        Quay lại chỉnh sửa
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Form Content -->
            <div class="p-6">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Left Column -->
                    <div class="space-y-6">
                        <!-- Class Name -->
                        <div class="form-group">
                            <label asp-for="TenLop" class="block text-sm font-medium text-gray-700 mb-2">
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                    </svg>
                                    Tên lớp học <span class="text-red-500">*</span>
                                </span>
                            </label>
                            <div class="relative">
                                <input asp-for="TenLop"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
                                       placeholder="Ví dụ: Yoga Buổi Sáng, Gym Tăng Cơ...">
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                                    </svg>
                                </div>
                            </div>
                            <span asp-validation-for="TenLop" class="text-red-500 text-sm mt-1 block"></span>
                        </div>

                        <!-- Trainer -->
                        <div class="form-group">
                            <label asp-for="HlvId" class="block text-sm font-medium text-gray-700 mb-2">
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    Huấn luyện viên
                                </span>
                            </label>
                            <select asp-for="HlvId" asp-items="ViewBag.Trainers"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200">
                                <option value="">-- Chọn huấn luyện viên --</option>
                            </select>
                            <span asp-validation-for="HlvId" class="text-red-500 text-sm mt-1 block"></span>
                            <p class="text-xs text-gray-500 mt-2 flex items-center">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Có thể để trống và phân công sau
                            </p>
                        </div>

                        <!-- Capacity -->
                        <div class="form-group">
                            <label asp-for="SucChua" class="block text-sm font-medium text-gray-700 mb-2">
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                    </svg>
                                    Sức chứa <span class="text-red-500">*</span>
                                </span>
                            </label>
                            <div class="relative">
                                <input asp-for="SucChua" type="number" min="1" max="100"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
                                       placeholder="Số lượng học viên tối đa">
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <span class="text-gray-500 text-sm">người</span>
                                </div>
                            </div>
                            <span asp-validation-for="SucChua" class="text-red-500 text-sm mt-1 block"></span>
                            @if (Model.DangKys.Count(d => d.TrangThai == "ACTIVE") > 0)
                            {
                                <div class="mt-2 p-3 bg-orange-50 border border-orange-200 rounded-lg">
                                    <div class="flex items-center">
                                        <svg class="w-4 h-4 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                                        </svg>
                                        <p class="text-sm text-orange-700">
                                            Hiện có <span class="font-semibold">@Model.DangKys.Count(d => d.TrangThai == "ACTIVE")</span> người đã đăng ký.
                                            Sức chứa không được nhỏ hơn số người đã đăng ký.
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Time Range -->
                        <div class="form-group">
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Thời gian học <span class="text-red-500">*</span>
                                </span>
                            </label>
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label asp-for="GioBatDau" class="block text-xs font-medium text-gray-600 mb-1">Giờ bắt đầu</label>
                                    <div class="relative">
                                        <input asp-for="GioBatDau" type="time"
                                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200">
                                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                    <span asp-validation-for="GioBatDau" class="text-red-500 text-sm mt-1 block"></span>
                                </div>
                                <div>
                                    <label asp-for="GioKetThuc" class="block text-xs font-medium text-gray-600 mb-1">Giờ kết thúc</label>
                                    <div class="relative">
                                        <input asp-for="GioKetThuc" type="time"
                                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200">
                                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                    <span asp-validation-for="GioKetThuc" class="text-red-500 text-sm mt-1 block"></span>
                                </div>
                            </div>
                            <div class="mt-2 text-xs text-gray-500 flex items-center">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span id="durationDisplay">Thời lượng sẽ được tính tự động</span>
                            </div>
                        </div>

                        <!-- Days of Week -->
                        <div class="form-group">
                            <label asp-for="ThuTrongTuan" class="block text-sm font-medium text-gray-700 mb-2">
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    Ngày học trong tuần <span class="text-red-500">*</span>
                                </span>
                            </label>
                            <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
                                @{
                                    var selectedDays = Model.ThuTrongTuan?.Split(',').Select(d => d.Trim()).ToList() ?? new List<string>();
                                }
                                <label class="flex items-center p-3 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors duration-200">
                                    <input type="checkbox" name="selectedDays" value="Thứ 2" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" @(selectedDays.Contains("Thứ 2") ? "checked" : "")>
                                    <span class="ml-2 text-sm font-medium text-gray-700">Thứ 2</span>
                                </label>
                                <label class="flex items-center p-3 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors duration-200">
                                    <input type="checkbox" name="selectedDays" value="Thứ 3" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" @(selectedDays.Contains("Thứ 3") ? "checked" : "")>
                                    <span class="ml-2 text-sm font-medium text-gray-700">Thứ 3</span>
                                </label>
                                <label class="flex items-center p-3 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors duration-200">
                                    <input type="checkbox" name="selectedDays" value="Thứ 4" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" @(selectedDays.Contains("Thứ 4") ? "checked" : "")>
                                    <span class="ml-2 text-sm font-medium text-gray-700">Thứ 4</span>
                                </label>
                                <label class="flex items-center p-3 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors duration-200">
                                    <input type="checkbox" name="selectedDays" value="Thứ 5" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" @(selectedDays.Contains("Thứ 5") ? "checked" : "")>
                                    <span class="ml-2 text-sm font-medium text-gray-700">Thứ 5</span>
                                </label>
                                <label class="flex items-center p-3 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors duration-200">
                                    <input type="checkbox" name="selectedDays" value="Thứ 6" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" @(selectedDays.Contains("Thứ 6") ? "checked" : "")>
                                    <span class="ml-2 text-sm font-medium text-gray-700">Thứ 6</span>
                                </label>
                                <label class="flex items-center p-3 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors duration-200">
                                    <input type="checkbox" name="selectedDays" value="Thứ 7" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" @(selectedDays.Contains("Thứ 7") ? "checked" : "")>
                                    <span class="ml-2 text-sm font-medium text-gray-700">Thứ 7</span>
                                </label>
                                <label class="flex items-center p-3 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors duration-200">
                                    <input type="checkbox" name="selectedDays" value="Chủ nhật" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" @(selectedDays.Contains("Chủ nhật") ? "checked" : "")>
                                    <span class="ml-2 text-sm font-medium text-gray-700">Chủ nhật</span>
                                </label>
                            </div>
                            <input asp-for="ThuTrongTuan" type="hidden" id="thuTrongTuanHidden">
                            <span asp-validation-for="ThuTrongTuan" class="text-red-500 text-sm mt-1 block"></span>
                            <p class="text-xs text-gray-500 mt-2 flex items-center">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Chọn ít nhất một ngày trong tuần
                            </p>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="space-y-6">
                        <!-- Duration -->
                        <div class="form-group">
                            <label asp-for="ThoiLuong" class="block text-sm font-medium text-gray-700 mb-2">
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Thời lượng (phút)
                                </span>
                            </label>
                            <div class="relative">
                                <input asp-for="ThoiLuong" type="number" min="15" max="300" step="15"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
                                       placeholder="Ví dụ: 60, 90, 120...">
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <span class="text-gray-500 text-sm">phút</span>
                                </div>
                            </div>
                            <span asp-validation-for="ThoiLuong" class="text-red-500 text-sm mt-1 block"></span>
                        <p class="text-xs text-gray-500 mt-1">Từ 15 đến 300 phút</p>
                    </div>

                    <!-- Custom Price -->
                    <div>
                        <label asp-for="GiaTuyChinh" class="block text-sm font-medium text-gray-700 mb-2">
                            Giá tùy chỉnh (VNĐ)
                        </label>
                        <div class="relative">
                            <input asp-for="GiaTuyChinh" type="number" min="0" step="1000"
                                   class="w-full px-3 py-2 pr-12 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                   placeholder="Để trống nếu dùng giá gói tập">
                            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                                <span class="text-gray-500 text-sm">VNĐ</span>
                            </div>
                        </div>
                        <span asp-validation-for="GiaTuyChinh" class="text-red-500 text-sm"></span>
                        <p class="text-xs text-gray-500 mt-1">Để trống nếu sử dụng giá từ gói tập</p>
                    </div>

                    <!-- Status -->
                    <div>
                        <label asp-for="TrangThai" class="block text-sm font-medium text-gray-700 mb-2">
                            Trạng thái
                        </label>
                        <select asp-for="TrangThai" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="OPEN">Đang mở</option>
                            <option value="CLOSED">Đã đóng</option>
                            <option value="FULL">Đã đầy</option>
                        </select>
                        <span asp-validation-for="TrangThai" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Description -->
                    <div>
                        <label asp-for="MoTa" class="block text-sm font-medium text-gray-700 mb-2">
                            Mô tả lớp học
                        </label>
                        <textarea asp-for="MoTa" rows="4"
                                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                  placeholder="Nhập mô tả chi tiết về lớp học..."></textarea>
                        <span asp-validation-for="MoTa" class="text-red-500 text-sm"></span>
                        <p class="text-xs text-gray-500 mt-1">Tối đa 500 ký tự</p>
                    </div>

                    <!-- Current Statistics -->
                    <div class="p-4 bg-blue-50 rounded-lg">
                        <h4 class="font-semibold text-gray-900 mb-3">📊 Thống kê hiện tại</h4>
                        <div class="grid grid-cols-2 gap-4 text-sm">
                            <div>
                                <span class="text-gray-600">Đã đăng ký:</span>
                                <span class="font-bold text-blue-600">@Model.DangKys.Count(d => d.TrangThai == "ACTIVE")</span>
                            </div>
                            <div>
                                <span class="text-gray-600">Còn trống:</span>
                                <span class="font-bold text-green-600">@(Model.SucChua - Model.DangKys.Count(d => d.TrangThai == "ACTIVE"))</span>
                            </div>
                            <div>
                                <span class="text-gray-600">Tỷ lệ lấp đầy:</span>
                                <span class="font-bold text-purple-600">@((Model.SucChua > 0 ? (double)Model.DangKys.Count(d => d.TrangThai == "ACTIVE") / Model.SucChua * 100 : 0).ToString("F1"))%</span>
                            </div>
                            <div>
                                <span class="text-gray-600">Lịch học:</span>
                                <span class="font-bold text-orange-600">Theo lịch hàng tuần</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Warning for Active Class -->
            @if (Model.TrangThai == "OPEN" && Model.DangKys.Any(d => d.TrangThai == "ACTIVE"))
            {
                <div class="mt-6 p-4 bg-yellow-50 border-l-4 border-yellow-400">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                        <div>
                            <h4 class="font-medium text-yellow-800">Lưu ý quan trọng</h4>
                            <p class="text-sm text-yellow-700 mt-1">
                                Lớp học này đang hoạt động và có @Model.DangKys.Count(d => d.TrangThai == "ACTIVE") người đã đăng ký. 
                                Việc thay đổi thời gian hoặc ngày học có thể ảnh hưởng đến lịch học đã tạo.
                            </p>
                        </div>
                    </div>
                </div>
            }

            <!-- Action Buttons -->
            <div class="flex gap-4 mt-8 pt-6 border-t border-gray-200">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md font-medium transition-colors">
                    💾 Cập nhật lớp học
                </button>
                <a href="@Url.Action("Details", new { id = Model.LopHocId })" class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-2 rounded-md font-medium transition-colors">
                    👁️ Xem chi tiết
                </a>
                <a href="@Url.Action("Index")" class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-2 rounded-md font-medium transition-colors">
                    ❌ Hủy bỏ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle days selection
            const dayCheckboxes = document.querySelectorAll('input[name="selectedDays"]');
            const hiddenInput = document.getElementById('thuTrongTuanHidden');
            
            // Initialize hidden input with current value
            hiddenInput.value = '@Model.ThuTrongTuan';
            
            dayCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateDaysString);
            });
            
            function updateDaysString() {
                const selectedDays = Array.from(dayCheckboxes)
                    .filter(cb => cb.checked)
                    .map(cb => cb.value);
                hiddenInput.value = selectedDays.join(', ');
            }

            // Initialize hidden input with current selected days
            updateDaysString();
            
            // Validate capacity against current registrations
            const capacityInput = document.getElementById('SucChua');
            const currentRegistrations = @Model.DangKys.Count(d => d.TrangThai == "ACTIVE");
            
            capacityInput.addEventListener('input', function() {
                const newCapacity = parseInt(this.value);
                if (newCapacity < currentRegistrations) {
                    this.setCustomValidity(`Sức chứa không được nhỏ hơn ${currentRegistrations} (số người đã đăng ký)`);
                } else {
                    this.setCustomValidity('');
                }
            });
        });
    </script>
}
