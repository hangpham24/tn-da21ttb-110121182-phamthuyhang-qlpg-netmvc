<script>
let currentPaymentData = null;

function showQRPaymentModal(paymentData) {
    currentPaymentData = paymentData;

    // Update payment info
    document.getElementById('qrPaymentAmount').textContent =
        new Intl.NumberFormat('vi-VN').format(paymentData.amount) + ' VNƒê';
    document.getElementById('qrOrderId').textContent =
        'M√£ ƒë∆°n h√†ng: ' + paymentData.orderId;

    // Update bank info if available
    if (paymentData.bankInfo) {
        document.getElementById('bankName').textContent = getBankName(paymentData.bankInfo.bankId);
        document.getElementById('accountNumber').textContent = paymentData.bankInfo.accountNo;
        document.getElementById('accountName').textContent = paymentData.bankInfo.accountName;
        document.getElementById('bankInfo').style.display = 'block';
    }

    // Show modal
    document.getElementById('qrPaymentModal').classList.remove('hidden');

    // Auto-generate QR code
    setTimeout(() => {
        showQRCode();
    }, 500);
}

function closeQRPaymentModal() {
    document.getElementById('qrPaymentModal').classList.add('hidden');
    currentPaymentData = null;
    
    // Clear QR code
    document.getElementById('qrCodeContainer').innerHTML = 
        '<div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>';
}

function showQRCode() {
    if (!currentPaymentData) {
        alert('Kh√¥ng c√≥ d·ªØ li·ªáu thanh to√°n');
        return;
    }

    const container = document.getElementById('qrCodeContainer');
    container.innerHTML = '<div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>';

    // Try to use VietQR image first (better compatibility with banking apps)
    if (currentPaymentData.qrImageUrl) {
        const img = new Image();
        img.onload = function() {
            container.innerHTML = '';
            img.style.width = '200px';
            img.style.height = '200px';
            img.style.border = '1px solid #e5e7eb';
            img.style.borderRadius = '8px';
            container.appendChild(img);
        };
        img.onerror = function() {
            // Fallback to QRCode.js if VietQR image fails
            generateQRCodeWithJS();
        };
        img.src = currentPaymentData.qrImageUrl;
    } else {
        // Fallback to QRCode.js
        generateQRCodeWithJS();
    }
}

function generateQRCodeWithJS() {
    const container = document.getElementById('qrCodeContainer');

    if (!currentPaymentData.qrCodeData) {
        container.innerHTML = `
            <div class="text-center text-red-600">
                <svg class="w-12 h-12 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
