        `;
        return;
    }

    // Generate QR code using QRCode.js library
    try {
        // Clear container
        container.innerHTML = '';

        // Create QR code
        QRCode.toCanvas(container, currentPaymentData.qrCodeData, {
            width: 200,
            height: 200,
            margin: 2,
