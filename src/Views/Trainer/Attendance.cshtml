@model object
@{
    ViewData["Title"] = "Điểm danh lớp học";
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
    
    var myClasses = ViewBag.MyClasses as IEnumerable<GymManagement.Web.Data.Models.LopHoc> ?? new List<GymManagement.Web.Data.Models.LopHoc>();
    // Note: LichLop model has been removed - using class and date info instead
    var students = ViewBag.Students as IEnumerable<GymManagement.Web.Data.Models.NguoiDung> ?? new List<GymManagement.Web.Data.Models.NguoiDung>();
    var existingAttendance = ViewBag.ExistingAttendance as Dictionary<int, GymManagement.Web.Data.Models.DiemDanh> ?? new Dictionary<int, GymManagement.Web.Data.Models.DiemDanh>();
    var selectedClassId = ViewBag.SelectedClassId as int? ?? 0;
    var selectedDate = ViewBag.SelectedDate as DateTime? ?? DateTime.Today;
}

<div class="min-h-screen bg-gray-50">
    <!-- Header Section -->
    <div class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between py-6">
                <div class="flex items-center space-x-4">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                            <svg class="w-7 h-7 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Điểm danh lớp học</h1>
                        <p class="text-sm text-gray-600">Quản lý điểm danh học viên trong lớp</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        
        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-50 border border-green-200 rounded-md p-4 mb-6">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-green-800">@TempData["SuccessMessage"]</p>
                    </div>
                </div>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-red-800">@TempData["ErrorMessage"]</p>
                    </div>
                </div>
            </div>
        }

        <!-- Class Selection Card -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">Chọn lớp học và ngày</h2>
            </div>
            <div class="px-6 py-4">
                <form id="classSelectionForm" method="get">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <label for="classId" class="block text-sm font-medium text-gray-700 mb-2">Lớp học</label>
                            <select id="classId" name="classId" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required>
                                <option value="">Chọn lớp học</option>
                                @foreach (var lopHoc in myClasses)
                                {
                                    <option value="@lopHoc.LopHocId" selected="@(lopHoc.LopHocId == selectedClassId)">
                                        @lopHoc.TenLop (@lopHoc.ThuTrongTuan - @lopHoc.GioBatDau.ToString("HH:mm"))
                                    </option>
                                }
                            </select>
                        </div>
                        <div>
                            <label for="date" class="block text-sm font-medium text-gray-700 mb-2">Ngày học</label>
                            <input type="date" id="date" name="date" value="@selectedDate.ToString("yyyy-MM-dd")" 
                                   class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required>
                        </div>
                        <div class="flex items-end">
                            <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                                </svg>
                                Tải danh sách
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if (selectedClassId > 0 && students.Any())
        {
            <!-- Class Info Card -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Thông tin lớp học</h2>
                </div>
                <div class="px-6 py-4">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Tên lớp</dt>
                            <dd class="mt-1 text-sm text-gray-900 font-semibold">@(myClasses.FirstOrDefault(c => c.LopHocId == selectedClassId)?.TenLop ?? "Không xác định")</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Ngày học</dt>
                            <dd class="mt-1 text-sm text-gray-900">@selectedDate.ToString("dd/MM/yyyy")</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Thời gian</dt>
                            <dd class="mt-1 text-sm text-gray-900">@(myClasses.FirstOrDefault(c => c.LopHocId == selectedClassId)?.GioBatDau.ToString("HH:mm") ?? "08:00") - @(myClasses.FirstOrDefault(c => c.LopHocId == selectedClassId)?.GioKetThuc.ToString("HH:mm") ?? "09:00")</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Số học viên</dt>
                            <dd class="mt-1 text-sm text-gray-900">@students.Count() người</dd>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Attendance Form -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <h2 class="text-lg font-semibold text-gray-900">Danh sách điểm danh</h2>
                        <div class="flex space-x-2">
                            <button type="button" id="markAllPresent" class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                Có mặt tất cả
                            </button>
                            <button type="button" id="markAllAbsent" class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-red-600 hover:bg-red-700">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                                Vắng mặt tất cả
                            </button>
                        </div>
                    </div>
                </div>
                <div class="px-6 py-4">
                    <form id="attendanceForm">
                        <input type="hidden" id="selectedClassId" value="@selectedClassId" />
                        <input type="hidden" id="selectedDate" value="@selectedDate.ToString("yyyy-MM-dd")" />
                        
                        <div class="space-y-4">
                            @{int index = 0;}
                            @foreach (var student in students)
                            {
                                var studentId = student.NguoiDungId;
                                var attendance = existingAttendance.ContainsKey(studentId) ? existingAttendance[studentId] : null;
                                var currentStatus = attendance?.TrangThai ?? "Present";
                                var currentNote = attendance?.GhiChu ?? "";
                                
                                <div class="flex items-center space-x-4 p-4 border border-gray-200 rounded-lg">
                                    <input type="hidden" name="attendanceRecords[@index].ThanhVienId" value="@studentId" />
                                    
                                    <!-- Student Info -->
                                    <div class="flex-1">
                                        <div class="flex items-center space-x-3">
                                            <div class="flex-shrink-0">
                                                <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center">
                                                    <span class="text-sm font-medium text-gray-600">@student.Ho?.Substring(0, 1)@student.Ten?.Substring(0, 1)</span>
                                                </div>
                                            </div>
                                            <div>
                                                <p class="text-sm font-medium text-gray-900">@student.Ho @student.Ten</p>
                                                <p class="text-xs text-gray-500">@student.Email</p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Status Selection -->
                                    <div class="flex space-x-2">
                                        <label class="inline-flex items-center">
                                            <input type="radio" name="attendanceRecords[@index].TrangThai" value="Present" 
                                                   @(currentStatus == "Present" ? "checked" : "") 
                                                   class="form-radio h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300">
                                            <span class="ml-2 text-sm text-green-700">Có mặt</span>
                                        </label>
                                        <label class="inline-flex items-center">
                                            <input type="radio" name="attendanceRecords[@index].TrangThai" value="Absent" 
                                                   @(currentStatus == "Absent" ? "checked" : "") 
                                                   class="form-radio h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300">
                                            <span class="ml-2 text-sm text-red-700">Vắng mặt</span>
                                        </label>
                                        <label class="inline-flex items-center">
                                            <input type="radio" name="attendanceRecords[@index].TrangThai" value="Late" 
                                                   @(currentStatus == "Late" ? "checked" : "") 
                                                   class="form-radio h-4 w-4 text-yellow-600 focus:ring-yellow-500 border-gray-300">
                                            <span class="ml-2 text-sm text-yellow-700">Muộn</span>
                                        </label>
                                    </div>
                                    
                                    <!-- Note Input -->
                                    <div class="w-48">
                                        <input type="text" name="attendanceRecords[@index].GhiChu" value="@currentNote" 
                                               placeholder="Ghi chú..." 
                                               class="block w-full px-3 py-1.5 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500">
                                    </div>
                                </div>
                                index++;
                            }
                        </div>
                        
                        <!-- Submit Button -->
                        <div class="mt-6 flex justify-end">
                            <button type="submit" id="submitAttendance" class="inline-flex items-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                Lưu điểm danh
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }
        else if (selectedClassId > 0)
        {
            <!-- No Students Message -->
            <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-yellow-800">Không có lịch học</h3>
                        <div class="mt-2 text-sm text-yellow-700">
                            <p>Không tìm thấy lịch học cho lớp và ngày đã chọn, hoặc chưa có học viên đăng ký.</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Mark all present functionality
    document.getElementById('markAllPresent')?.addEventListener('click', function() {
        const presentRadios = document.querySelectorAll('input[type="radio"][value="Present"]');
        presentRadios.forEach(radio => {
            radio.checked = true;
        });
    });

    // Mark all absent functionality
    document.getElementById('markAllAbsent')?.addEventListener('click', function() {
        const absentRadios = document.querySelectorAll('input[type="radio"][value="Absent"]');
        absentRadios.forEach(radio => {
            radio.checked = true;
        });
    });

    // Submit attendance form
    document.getElementById('attendanceForm')?.addEventListener('submit', function(e) {
        e.preventDefault();

        const submitButton = document.getElementById('submitAttendance');
        const originalText = submitButton.innerHTML;

        // Show loading state
        submitButton.disabled = true;
        submitButton.innerHTML = '<svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Đang lưu...';

        const formData = new FormData(this);
        const selectedClassId = document.getElementById('selectedClassId').value;
        const selectedDate = document.getElementById('selectedDate').value;

        // Collect attendance records
        const attendanceRecords = [];
        const studentIds = document.querySelectorAll('input[name*="ThanhVienId"]');

        studentIds.forEach((input, index) => {
            const thanhVienId = input.value;
            const statusRadio = document.querySelector(`input[name="attendanceRecords[${index}].TrangThai"]:checked`);
            const noteInput = document.querySelector(`input[name="attendanceRecords[${index}].GhiChu"]`);

            if (statusRadio) {
                attendanceRecords.push({
                    ThanhVienId: parseInt(thanhVienId),
                    TrangThai: statusRadio.value,
                    GhiChu: noteInput ? noteInput.value : ''
                });
            }
        });

        // Send AJAX request
        fetch('/Trainer/TakeAttendance', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: JSON.stringify({
                lopHocId: parseInt(selectedClassId),
                attendanceDate: selectedDate,
                attendanceRecords: attendanceRecords
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Show success message
                showToast('success', data.message || 'Điểm danh thành công!');

                // Optionally reload the page to show updated data
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } else {
                showToast('error', data.message || 'Có lỗi xảy ra khi điểm danh.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showToast('error', 'Có lỗi xảy ra khi điểm danh.');
        })
        .finally(() => {
            // Restore button state
            submitButton.disabled = false;
            submitButton.innerHTML = originalText;
        });
    });

    // Toast notification function
    function showToast(type, message) {
        const toast = document.createElement('div');
        toast.className = `fixed top-4 right-4 z-50 p-4 rounded-md shadow-lg ${
            type === 'success' ? 'bg-green-50 border border-green-200' : 'bg-red-50 border border-red-200'
        }`;

        toast.innerHTML = `
            <div class="flex">
                <div class="flex-shrink-0">
                    ${type === 'success'
                        ? '<svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>'
                        : '<svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" /></svg>'
                    }
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium ${type === 'success' ? 'text-green-800' : 'text-red-800'}">${message}</p>
                </div>
                <div class="ml-auto pl-3">
                    <button type="button" class="inline-flex ${type === 'success' ? 'text-green-400 hover:text-green-500' : 'text-red-400 hover:text-red-500'}" onclick="this.parentElement.parentElement.parentElement.remove()">
                        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            </div>
        `;

        document.body.appendChild(toast);

        // Auto remove after 5 seconds
        setTimeout(() => {
            if (toast.parentNode) {
                toast.parentNode.removeChild(toast);
            }
        }, 5000);
    }
});
</script>
